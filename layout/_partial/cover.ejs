<% if (theme.plugins.pjax.enable) { %>
  <%
    var enableCover = false; // 封面是否开启
    if(theme.cover && theme.cover.scheme) {
      enableCover = true;
    }
  %>
  <% if (enableCover) { %>
  <div class="cover-wrapper">
    <div class='cover<%- page.layout %>' style="display: none;">
      <div class='cover-bg lazyload' data-bg="<%- theme.cover.background %>"></div>
      <%- partial('../_cover/' + theme.cover.layout) %>
      <div class="scroll-down" style="display: none;"><i class="fa fa-chevron-down scroll-down-effects"></i></div>
    </div>
    <%- partial('header', null, {cache: false, path: path}) %>
  </div>
  <% } else { %>
    <%- partial('header', null, {cache: false, path: path}) %>
  <% } %>
<% } else { %>
  <% if (page.cover == true) { %>
    <div class="cover-wrapper">
      <% if (is_home() && page.prev == 0 && theme.cover.scheme == 'docs') { %>
        <div class='cover lazyload <%- page.layout %> full' data-bg="<%- theme.cover.background %>">
          <%- partial('../_cover/' + theme.cover.layout) %>
          <div class="scroll-down"><i class="fa fa-chevron-down scroll-down-effects"></i></div>
        </div>
      <% } else { %>
        <div class='cover lazyload <%- page.layout %> half' data-bg="<%- theme.cover.background %>">
          <%- partial('../_cover/' + theme.cover.layout) %>
        </div>
      <% } %>
      <%- partial('header', null, {cache: false, path: path}) %>
    </div>
  <% } else { %>
    <%- partial('header', null, {cache: false, path: path}) %>
  <% } %>
<% } %>
